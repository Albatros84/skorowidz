<div id="index_p">
<h1 class="title">Spis projektów</h1>
<table class="metryczka" >
  <tr>
    <th>Nazwa</th>
    <th>Klient</th>
    <th>Rodzaj Projektu</th>
    <th>Numer Księgowy</th>
    <th>Highrise</th>
    <th>Skydrive</th>
    <th>Basecamp</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td id="name"><span class="name"><%= project.name %></span></td>
    <td class="ind"><%= project.client %> </td>
    <td class="ind"><%= project.project_type %> </td>
    <td class="ind"><%= project.numer_ks %> </td>
    <td class="ind"><a href=<%= project.highrise.to_s%> target="blank"><%= project.highrise.to_s %></a></td>
    <td class="ind"><a href=<%= project.skydrive.to_s %> target="_blank"><%=project.skydrive.to_s %> </a></td>
    <td class="ind"><a href=<%= project.basecamp.to_s %> target="_blank"><%=project.basecamp.to_s %></a></td>
    <td class="show"><%= link_to 'Pokaż', project %></td>
    <td class="ed"><%= link_to 'Edytuj', edit_project_path(project) %></td>
    <td class="del"><%= link_to 'Usuń', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
<div class="new">
<%= link_to 'Nowy Projekt', new_project_path %>
</div>
</div>
