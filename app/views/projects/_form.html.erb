	<h3>Zespół </h3>
	<%= form_tag('myupdate', :remote => true) do%>	
	<%= hidden_field_tag(:project_id, @project.id) %>
	<%= select_tag "users", options_from_collection_for_select(@users, "id", "name")%>
	<%= select_tag "proj_role", options_for_select([ "trener", "asystent", "koordynator merytoryczny", "reporter" ]) %>
